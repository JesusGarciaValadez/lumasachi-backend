{
    "private": true,
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "lint-staged": "php ./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php --allow-risky=yes",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@laravel/vite-plugin-wayfinder": "^0.1.7",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.2.3",
        "@vitejs/plugin-vue": "^6.0.4",
        "@vue/eslint-config-typescript": "^14.3.0",
        "chokidar": "^5.0.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.2.0",
        "eslint-plugin-vue": "^10.7.0",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0",
        "vite": "^7.3.1",
        "vue-tsc": "^3.2.4"
    },
    "dependencies": {
        "@inertiajs/vue3": "^2.3.14",
        "@vueuse/core": "^14.2.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.0.1",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^2.1.0",
        "lucide-vue-next": "^0.563.0",
        "reka-ui": "^2.8.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "vue": "^3.5.28",
        "vue-i18n": "11.2.8",
        "ziggy-js": "^2.6.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.php": [
            "php ./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php --allow-risky=yes",
            "./vendor/bin/pint -v"
        ]
    }
}
